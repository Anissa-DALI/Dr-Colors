{% extends 'base.html.twig' %}

{% block title %}Bonjour administrateur !{% endblock %}

{% block body %}
{{include('partial/header.html.twig')}}

<h1 class="text-center">Liste des clients et des demandes en cours</h1>

<div class="p-5">
 <table class="table table-responsive">
            <tr>
                <th>Civilité</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Téléphone</th>
                <th>Email</th>
                <th>Message</th>
                <th>Réalisation</th>
            </tr>
{% for userPar in userPars %}
            <tr>
                <td>{{ userPar.civilites }}</td>
                <td>{{ userPar.nom }}</td>
                <td>{{ userPar.prenom }}</td>
                <td>{{ userPar.telephone }}</td>
                <td>{{ userPar.email }}</td>
                <td>{{ userPar.message }}</td>
                <td>{{ userPar.realisation }}</td>
            </tr>
{% endfor %}
 </table>
 </div>


 <div class="p-5">
 <table class="table table-responsive">
            <tr>
                <th>Nom de la société</th>
                <th>Adresse</th>
                <th>Code Postal</th>
                <th>Ville</th>
                <th>Accessibilité</th>
                <th>Etat du mur</th>
                <th>Superficie</th>
                <th>Hauteur Max</th>
                <th>Photo</th>
            </tr>
{% for userPro in userPros %}
            <tr>
                <td>{{ userPro.societe_name }}</td>
                <td>{{ userPro.adresse }}</td>
                <td>{{ userPro.code_postal }}</td>
                <td>{{ userPro.ville }}</td>
                <td>{{ userPro.accessibilite }}</td>
                <td>{{ userPro.etat_mur }}</td>
                <td>{{ userPro.superficie }}</td>
                <td>{{ userPro.hauteur_max }}</td>
                <td>{{ userPro.telecharger_photo_id }}</td>
            </tr>
{% endfor %}
 </table>
 </div>

